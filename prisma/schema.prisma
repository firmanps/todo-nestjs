generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String?  @unique //@unique itu harus unik untuk global jadi semua user harus unik
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  todos     Todo[]

  @@map("users")
}

model Todo {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TodoStatus @default(TODO)
  userId      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, title]) //jika pengen unik peruser aja jadi tidak global
  @@unique([id, userId]) //untuk ownership jadi Prisma akan generate composite unique key
  // âš¡ performance untuk query
  @@index([userId])
  @@index([userId, status, createdAt])
  @@map("todos")
}

enum TodoStatus {
  TODO
  IN_PROGRESS
  COMPLETED
}
